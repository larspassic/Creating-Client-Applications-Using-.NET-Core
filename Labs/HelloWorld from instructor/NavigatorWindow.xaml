<Window x:Class="HelloWorld.NavigatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="NavigatorWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="images/wpf-world.png" />
        <!-- Pick any image that you have-->
    </Window.Background>
    <StackPanel>
        <TextBlock>Enter an address (<Run Foreground="red">Don't forget http://</Run>)</TextBlock>
        <TextBox x:Name="uxUrl" Background="Beige"></TextBox>
        <Button x:Name="uxGo" Click="uxGo_Click" Background="Coral">Go</Button>
    </StackPanel>
</Window>
